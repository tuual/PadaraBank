<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTutorialBg"
    android:padding="20dp"
    tools:context=".frmParaGonderme">

    <EditText
        android:id="@+id/etbakiye"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:autoSizeMaxTextSize="30sp"
        android:autoSizeMinTextSize="20sp"

        android:background="@drawable/etstyle"
        android:hint="-- Bakiye --"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/colorTrlSignBg"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/etpadarano"
        app:layout_constraintEnd_toEndOf="@+id/etpadarano"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/etpadarano"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etpadarano"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:autoSizeMaxTextSize="30sp"
        android:autoSizeMinTextSize="20sp"
        android:background="@drawable/etstyle"
        android:hint="Padara NumarasÄ±"
        android:inputType="number"

        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/colorTrlSignBg"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnGonder"
        app:layout_constraintEnd_toEndOf="@+id/btnGonder"
        app:layout_constraintHorizontal_bias="0.366"
        app:layout_constraintStart_toStartOf="@+id/btnGonder"
        app:layout_constraintTop_toBottomOf="@+id/etbakiye" />

    <Button
        android:id="@+id/btnGonder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="152dp"
        android:autoSizeMaxTextSize="20sp"
        android:autoSizeMinTextSize="16sp"
        android:background="@drawable/buttonbg"
        android:fontFamily="arial"
        android:padding="15dp"
        android:text="@string/buttonText3"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etpadarano" />
</androidx.constraintlayout.widget.ConstraintLayout>